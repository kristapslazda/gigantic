<div class="faq-section-wrapper">
    <div class="container">
        <h2>{{ section.settings.faq-heading }}</h2>

        <div class="faq-wrapper row">
            {% for block in section.blocks %}
                <div class="col-md-6 col-12">
                    <div class="faq-sec">
                        <h4>{{ block.settings.faq-head }}</h4>
                        <div class="content">
                            {{ block.settings.faq-text }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="read-more-faq-holder">
          <a class="read-more-faq" data-read-less="{{ 'products.product.read_less_faq' | t }}" data-read-more="{{ 'products.product.read_more_faq' | t }}">{{ 'products.product.read_more_faq' | t }}</a>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "FAQ Product page",
  "class": "product-page-faq",
  "settings": [
    {
      "type": "text",
      "id": "faq-heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "cta",
      "name": "FAQ",
      "settings": [
        {
          "type": "text",
          "id": "faq-head",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "faq-text",
          "label": "Answer"
        }
      ]
    }
  ]
}
{% endschema %}