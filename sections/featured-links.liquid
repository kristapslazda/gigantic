<div class="feature-link__wrapper">
    <div class="container">
        <div class="row">
            {% for block in section.blocks %}
                <div class="col-md">
                    <div class="feature-link">
                        <div class="img-wrapper">
                            {% if block.settings.image != blank %}<img class="lazyload" data-src="{{ block.settings.image | img_url: "x200" }}" alt="{{ block.settings.heading }}">{% endif %}
                        </div>
                        <div class="content">
                            <span>{{ block.settings.heading }}</span>
                            {% if block.settings.link != blank %} <a href="{{ block.settings.link }}" class="goto">{{ block.settings.btn-link }}{% include "icon-arrow-right" %}</a> {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Featured Links",
  "class": "index-section",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Link",
      "settings": [
        {
          "type": "text",
          "label": "Heading",
          "id": "heading"
        },
        {
          "type": "text",
          "label": "Link text",
          "id": "btn-link"
        },
        {
          "type": "url",
          "label": "Link",
          "id": "link"
        },
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Links",
      "category": "Text",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}
