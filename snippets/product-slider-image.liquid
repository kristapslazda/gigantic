{%- assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
<img
    sizes="
        (max-width: 991px) 358px,
        (max-width: 1199px) 502px,
        (max-width: 1399px) 610px,
        730px
    "  
    data-srcset="
        {{image | img_url: '358x'}} 358w,
        {{image | img_url: '502x'}} 502w,
        {{image | img_url: '610x'}} 610w,
        {{image | img_url: '730x'}} 730w,
    "
    data-zoom-image="{{image | img_url: '1500x'}}"
    data-src="{{image | img_url: '730x'}}"
    class="lazyload" 
/>